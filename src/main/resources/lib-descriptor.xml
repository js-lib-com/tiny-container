<?xml version="1.0" encoding="UTF-8"?>
<config>
	<managed-classes>
		<!-- App should be declared first to be initialized before the other managed classes with managed life cycle. -->
		<app class="js.core.App" />
		<app-context interface="js.core.AppContext" class="js.servlet.TinyContainer" />
		<observer class="js.container.Observer" />

		<request-context class="js.servlet.RequestContext" scope="THREAD" />

		<transaction-manager interface="js.transaction.TransactionManager" type="SERVICE" />
		<data-source class="js.container.TransactionalResourceImpl">
			<interface name="js.container.TransactionalResource" />
			<interface name="js.transaction.TransactionContext" />
		</data-source>

		<views interface="js.mvc.ViewManager" class="js.mvc.ViewManagerImpl" />
		<captcha class="js.http.captcha.Captcha" />

		<event-stream-manager class="js.net.EventStreamManagerImpl">
			<interface name="js.net.EventStreamManager" />
			<interface name="js.net.EventStreamManagerSPI" />
		</event-stream-manager>
		<event-stream class="js.net.EventStream" scope="LOCAL" />

		<json interface="js.json.Json" type="SERVICE" />
		<document-builder interface="js.dom.DocumentBuilder" type="SERVICE" />
		<template-engine interface="js.template.TemplateEngine" type="SERVICE" />
	</managed-classes>
</config>